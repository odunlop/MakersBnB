        <br>
        <b><a href="/spaces/<%=space.id%>" id="<%=space.id%>"><%= space.name %></a></b><br>
        <i><%= space.description %></i><br>
        Price: Â£<%= space.price %> per night
      </div>
      <% end %>
  <br><br>
  <a href="/spaces/mine" id="user_spaces">My Spaces</a>
</div>
